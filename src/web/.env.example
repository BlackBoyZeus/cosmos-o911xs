# API Configuration
# Base URL for API endpoints
VITE_API_BASE_URL=http://localhost:3000/api/v1
# API request timeout in milliseconds
VITE_API_TIMEOUT=60000
# API key for authentication
VITE_API_KEY=<your-api-key-here>
# Maximum number of API request retries
VITE_MAX_RETRIES=3
# Delay between retries in milliseconds
VITE_RETRY_DELAY=1000

# Authentication Settings
# Local storage key for auth token
VITE_AUTH_TOKEN_KEY=cosmos_auth_token
# Buffer time in seconds before token expiry to refresh
VITE_AUTH_TOKEN_EXPIRY_BUFFER=300
# Authentication service endpoint
VITE_AUTH_ENDPOINT=http://localhost:3000/auth

# Security Configuration
# Enable safety guardrails for content generation
VITE_ENABLE_SAFETY_GUARDRAILS=true

# Feature Flags
# Enable GPU metrics collection and display
VITE_ENABLE_GPU_METRICS=true
# Enable model performance metrics
VITE_ENABLE_MODEL_METRICS=true

# Monitoring and Logging
# Enable request logging
VITE_ENABLE_REQUEST_LOGGING=true
# Log level (debug, info, warn, error)
VITE_LOG_LEVEL=info
# Monitoring service endpoint
VITE_MONITORING_ENDPOINT=http://localhost:9090

