{
  "name": "@cosmos/backend",
  "version": "1.0.0",
  "description": "Backend service for the Cosmos World Foundation Model Platform",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "jest --coverage --detectOpenHandles",
    "test:security": "snyk test",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docs": "typedoc src/",
    "audit": "npm audit fix",
    "prepare": "husky install",
    "profile": "node --prof dist/index.js",
    "benchmark": "node benchmark/index.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.0.0",
    "@azure/storage-blob": "^12.0.0",
    "@google-cloud/storage": "^6.0.0",
    "@nvidia/cuda": "12.0.0",
    "@nvidia/cuda-toolkit": "12.0.0",
    "@opentelemetry/auto-instrumentations-node": "^0.36.0",
    "@opentelemetry/sdk-node": "^1.9.0",
    "@pytorch/pytorch-js": "^2.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.0.0",
    "bull": "^4.10.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "express-async-handler": "^1.2.0",
    "express-correlation-id": "^1.0.0",
    "express-rate-limit": "^6.0.0",
    "express-validator": "^7.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^6.0.0",
    "http-status-codes": "^2.2.0",
    "ioredis": "5.3.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.0.0",
    "mongoose-field-encryption": "^4.0.0",
    "morgan": "^1.10.0",
    "node-gpu": "^1.0.0",
    "nvidia-smi": "1.0.0",
    "opossum": "^6.0.0",
    "prom-client": "^14.0.0",
    "rate-limit-redis": "^3.0.0",
    "rate-limiter-flexible": "^2.4.1",
    "retry": "^0.13.0",
    "sharp": "^0.32.0",
    "typeorm": "^0.3.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.0",
    "winston-daily-rotate-file": "^4.7.0",
    "zod": "^3.0.0"
