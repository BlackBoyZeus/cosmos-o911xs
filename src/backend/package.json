    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/jest": "^29.5.0",
    "@types/morgan": "^1.9.4",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "autocannon": "^7.10.0",
    "eslint": "^8.35.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.4",
    "snyk": "^1.1130.0",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.24.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
